#!/bin/bash

set -eu

input="$PHOTOSYNC_ORIGINALS"
output="$PHOTOSYNC_SITE"
mkdir -pv "$output"

docker run -t \
    -v /etc/localtime:/etc/localtime \
    -v "$input:/mnt/input:ro" \
    -v "$output:/mnt/output" \
    ghcr.io/thumbsup/thumbsup \
    thumbsup \
    --input '/mnt/input' --output '/mnt/output' \
    --albums-from "{YYYY}" \
    --albums-from "{YYYY}-{MM}" \
    --albums-from "Days/{YYYY}-{MM}-{DD}" \
    --sort-albums-direction desc \
    --sort-media-direction desc \
    --thumb-size 240 \
    --large-size 1512 \
    --embed-exif \
    --photo-download link \
    --link-prefix 'http://l4:8080/'
